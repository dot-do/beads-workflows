{
  "name": "beads-workflows",
  "version": "0.1.0",
  "description": "Workflow engine + TypeScript SDK for beads issue tracker",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "beads-workflows": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components.js",
      "types": "./dist/components.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/index.ts src/components.ts --outdir dist --target node && bun build src/cli.ts --outdir dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "beads",
    "workflows",
    "issue-tracker",
    "automation",
    "claude",
    "agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/beads-workflows.git"
  },
  "author": "dot-do",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "yaml": "^2.8.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
